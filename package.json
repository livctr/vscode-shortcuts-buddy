{
  "name": "shortcuts-helper",
  "displayName": "VSCode Shortcut Buddy",
  "description": "Training wheels for VSCode shortcuts",
  "version": "0.0.1",
  "publisher": "livctr",
  "repository": {
    "type": "git",
    "url": "https://github.com/livctr/shortcuts-helper"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "shortcuts-helper.viewLearnedShortcuts",
        "title": "Shortcuts Helper: View Learned Shortcuts"
      }
    ],
    "configuration": {
      "title": "Shortcuts Helper",
      "properties": {
        "shortcutsHelper.cooldownInterval": {
          "type": "number",
          "default": 3000,
          "description": "Cooldown interval in milliseconds between recommendations."
        },
        "shortcutsHelper.sessionRecommendationLimit": {
          "type": "number",
          "default": 4,
          "description": "Maximum number of recommendations to show per session."
        },
        "shortcutsHelper.debounceInterval": {
          "type": "number",
          "default": 500,
          "description": "Delay in milliseconds after typing or scrolling before analyzing events."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "18.x",
    "typescript": "~4.9.5"
  }
}